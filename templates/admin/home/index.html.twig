{% extends 'admin/base.html.twig' %}
{% block title %}{% endblock %}
{% block body %}


        <!-- /.row -->
        <div class="row">
            <div class="col-lg-3 col-md-6">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-3">
                                <i class="fa fa-comments fa-5x"></i>
                            </div>
                            <div class="col-xs-9 text-right">
                                <div class="huge">{{ stat.countCountry("'TOGO'") }}</div>
                                <div>Participant du Togo</div>
                            </div>
                        </div>
                    </div>
                    <a href="#">
                        <div class="panel-footer">
                            <span class="pull-left">View Details</span>
                            <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                            <div class="clearfix"></div>
                        </div>
                    </a>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="panel panel-green">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-3">
                                <i class="fa fa-tasks fa-5x"></i>
                            </div>
                            <div class="col-xs-9 text-right">
                                <div class="huge">{{ stat.countCountry("'GHANA'") }}</div>
                                <div>Participant du Ghana</div>
                            </div>
                        </div>
                    </div>
                    <a href="#">
                        <div class="panel-footer">
                            <span class="pull-left">View Details</span>
                            <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                            <div class="clearfix"></div>
                        </div>
                    </a>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="panel panel-yellow">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-3">
                                <i class="fa fa-shopping-cart fa-5x"></i>
                            </div>
                            <div class="col-xs-9 text-right">
                                <div class="huge">{{ stat.countCountry("'NIGERIA'") }}</div>
                                <div>Participant du Nigeria</div>
                            </div>
                        </div>
                    </div>
                    <a href="#">
                        <div class="panel-footer">
                            <span class="pull-left">View Details</span>
                            <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                            <div class="clearfix"></div>
                        </div>
                    </a>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="panel panel-red">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-3">
                                <i class="fa fa-support fa-5x"></i>
                            </div>
                            <div class="col-xs-9 text-right">
                                <div class="huge">{{ stat.countCountry("'LIBERIA'") }}</div>
                                <div>Participant du Togo</div>
                            </div>
                        </div>
                    </div>
                    <a href="#">
                        <div class="panel-footer">
                            <span class="pull-left">View Details</span>
                            <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                            <div class="clearfix"></div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="row">
                <div class="col-lg-6">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                           Chevaliers Récemment enregistrés
                        </div>
                        <div class="panel-body">
                            <table width="100%" class="table table-striped table-bordered table-hover" id="tableK">
                                <thead>
                                <tr>
                                    <th>photo</th>
                                    <th>Nom et prénoms</th>
                                    <th>Pays</th>
                                    <th>Grande commanderie</th>
                                    <th>Commanderie local</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% if knights %}
                                    {% for knight in knights %}
                                        <tr>
                                            <td><img src="{{ asset('uploads/participants/') }}{% if knight.image is not null %}{{  knight.image}}{% endif %}" alt="avatar avatar-mini"></td>
                                            <td>{{ knight.fullName }}</td>
                                            <td>{{ knight.country }}</td>
                                            <td class="center">{{ knight.board }}</td>
                                            <td class="center">{{ knight.local }}</td>
                                        </tr>
                                    {% endfor %}
                                {% else %}
                                    <tr>
                                        <td colspan="5">Aucune donnée</td>
                                    </tr>
                                {% endif %}

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Dames Récemment enregistrés
                        </div>
                        <div class="panel-body">
                            <table width="100%" class="table table-striped table-bordered table-hover" id="tableL">
                                <thead>
                                <tr>
                                    <th>photo</th>
                                    <th>Nom et prénoms</th>
                                    <th>Pays</th>
                                    <th>Grande Auxilliarie</th>
                                    <th>Auxilliarie local</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% if ladies %}
                                {% for lady in ladies %}
                                <tr>
                                    <td><img src="{% if lady.image is not null %}{{ asset('uploads/participants/') }}{{  lady.image}}{% else %}{{ asset('uploads/participants/logo-moov-3m44x2m50-5eeb2c7c945c1584884703.jpg') }}{% endif %}" class="avatar avatar-mini"></td>
                                    <td>{{ lady.fullName }}</td>
                                    <td>{{ lady.country }}</td>
                                    <td class="center">{{ lady.board }}</td>
                                    <td class="center">{{ lady.local }}</td>
                                </tr>
                                {% endfor %}
                                {% else %}
                                <tr>
                                    <td colspan="5">Aucune donnée</td>
                                </tr>
                                {% endif %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>


{% endblock %}