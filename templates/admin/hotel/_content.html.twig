<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Hotel
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                    <tr>
                        <th>N°</th>
                        <th>Hotel</th>
                        <th>Description Chambre</th>
                        <th>Etoile</th>
                        <th>Prix</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% if hotels %}
                        {% for hotel in hotels %}
                            <tr>
                                <td width="75px">{{ loop.index0 + 1  }}</td>
                                <td>{{ hotel.name }}</td>
                                <td>{{ hotel.introduction }}</td>
                                <td>{% include 'partials/ratings.html.twig' with {'rating': hotel.rating} %}</td>
                                <td>{{ hotel.price }}</td>
                                <td class="left" width="150px">
                                    <a href="{{ path('admin_hotel_edit', {id : hotel.id} ) }}" class="btn btn-link"><i class="fa fa-edit"></i></a>
                                    <a href="{{ path('admin_hotel_delete', {id : hotel.id} ) }}" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                                </td>
                            </tr>
                        {% endfor %}
                    {% else %}
                    <tr>
                        <td colspan="5">Aucune donnée dans la base .</td>
                    </tr>
                    {% endif %}
                    </tbody>
                </table>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>