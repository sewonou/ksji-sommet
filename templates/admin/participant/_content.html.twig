<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Liste des participants
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="myTable">
                    <thead>
                    <tr>
                        <th>N°</th>
                        <th>Photo</th>
                        <th>Catégorie</th>
                        <th>Nom et prénoms</th>
                        <th>Pays</th>
                        <th>Grande | Local (commanderie / Auxilliarie)</th>
                        <th>Contact | Mail </th>
                        <th>Hotel</th>
                        <th>Voix d'arrivé</th>
                        <th>Heure d'arrivé</th>
                        <th>Heure de départ</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% if participants %}
                        {% for participant in participants %}
                            <tr>
                                <td width="75px">{{ loop.index0 + 1  }}</td>
                                <td>
                                    <img src="{{ asset('uploads/participants/') }}{% if participant.image is not null %}{{  participant.image}}{% endif %}" class="avatar avatar-mini" alt="{{ participant.fullName }}">
                                </td>
                                <th>{{ participant.category }}</th>
                                <td>{{ participant.fullName }}</td>
                                <td>{{ participant.country }}</td>
                                <td>{{ participant.board ~' | '~ participant.local}}</td>
                                <td>{{ participant.phone ~' | '~ participant.email }}</td>
                                <td>{% if participant.hotel is not null %}{{ participant.hotel.name }}{% endif %}</td>
                                <td>{{ participant.arrivalWay }}</td>
                                <td>{{ participant.arrivalTime | date() }}</td>
                                <td>{{ participant.departureTime | date() }}</td>

                                <td class="left" width="150px">
                                    <a href="{{ path('admin_participant_edit', {id : participant.id} ) }}" class="btn btn-link"><i class="fa fa-edit"></i></a>
                                    <a href="{{ path('admin_participant_delete', {id : participant.id} ) }}" class="btn btn-danger"><i class="fa fa-trash"></i></a>

                                </td>
                            </tr>
                        {% endfor %}
                    {% else %}
                    <tr>
                        <td colspan="3">Aucune donnée dans la base .</td>
                    </tr>
                    {% endif %}
                    </tbody>
                </table>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>