<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Faq
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                    <tr>
                        <th>N°</th>
                        <th>Catégorie</th>
                        <th>Nom et prénoms</th>
                        <th>Pays</th>
                        <th>Grande commanderie / Auxilliarie</th>
                        <th>commanderie / Auxilliarie Locale</th>
                        <th>Contact</th>
                        <th>Mail</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% if participants %}
                        {% for participant in participants %}
                            <tr>
                                <td width="75px">{{ loop.index0 + 1  }}</td>
                                <th>{{ participant.category }}</th>
                                <td>{{ participant.fullName }}</td>
                                <td>{{ participant.country }}</td>
                                <td>{{ participant.board }}</td>
                                <td>{{ participant.local }}</td>
                                <td>{{ participant.phone }}</td>
                                <td>{{ participant.email }}</td>
                                <td class="left" width="150px">
                                    <a href="{{ path('admin_participant_edit', {id : participant.id} ) }}" class="btn btn-link"><i class="fa fa-edit"></i></a>
                                    <a href="{{ path('admin_participant_delete', {id : participant.id} ) }}" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                                </td>
                            </tr>
                        {% endfor %}
                    {% else %}
                    <tr>
                        <td colspan="3">Aucune donnée dans la base .</td>
                    </tr>
                    {% endif %}
                    </tbody>
                </table>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>