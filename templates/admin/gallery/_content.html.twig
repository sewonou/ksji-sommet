<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Hotel
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                    <tr>
                        <th>N°</th>
                        <th>Image</th>
                        <th>Description</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% if galleries %}
                        {% for gallery in galleries %}
                            <tr>
                                <td width="75px">{{ loop.index0 + 1  }}</td>
                                <td width="160px">
                                    <a href="{{ vich_uploader_asset(gallery, 'imageFile') }}" >
                                        <img src="{{ vich_uploader_asset(gallery, 'imageFile') }}" alt="{{ gallery.imageName }}" class="avatar avatar-big">
                                    </a>
                                </td>
                                <td>{{ gallery.description }}</td>
                                <td class="left" width="150px">
                                    <a href="{{ path('admin_gallery_edit', {id : gallery.id} ) }}" class="btn btn-link"><i class="fa fa-edit"></i></a>
                                    <a href="{{ path('admin_gallery_delete', {id : gallery.id} ) }}" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                                </td>
                            </tr>
                        {% endfor %}
                    {% else %}
                    <tr>
                        <td colspan="4">Aucune donnée dans la base .</td>
                    </tr>
                    {% endif %}
                    </tbody>
                </table>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>