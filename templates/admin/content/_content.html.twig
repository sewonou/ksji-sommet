<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                LIste des contenus
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                    <tr>
                        <th>N°</th>
                        <th>Categorie</th>
                        <th>Titre</th>
                        <th>Contenu</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% if contents %}
                        {% for content in contents %}
                            <tr>
                                <td width="75px">{{ loop.index0 + 1  }}</td>
                                <td>{{ content.category.title }}</td>
                                <td>{{ content.title }}</td>
                                <td>{{ content.description }}</td>
                                <td class="left" width="150px">
                                    <a href="{{ path('admin_content_edit', {id : content.id} ) }}" class="btn btn-link"><i class="fa fa-edit"></i></a>
                                    <a href="{{ path('admin_content_delete', {id : content.id} ) }}" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                                </td>
                            </tr>
                        {% endfor %}
                    {% else %}
                    <tr>
                        <td colspan="3">Aucune donnée dans la base .</td>
                    </tr>
                    {% endif %}
                    </tbody>
                </table>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>