<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Liste des activités
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                    <tr>
                        <th>N°</th>
                        <th>Jour</th>
                        <th>Heure</th>
                        <th>Titre</th>
                        <th>Orateur</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% if dayEvents %}
                        {% for dayEvent in dayEvents %}
                            <tr>
                                <td width="75px">{{ loop.index0 + 1  }}</td>
                                <td>{{ dayEvent.day.info }}</td>
                                <td>{{ dayEvent.hour }}</td>
                                <td>{{ dayEvent.title }}</td>
                                <td>{{ dayEvent.speaker }}</td>
                                <td class="left" width="150px">
                                    <a href="{{ path('admin_day_event_edit', {id : dayEvent.id} ) }}" class="btn btn-link"><i class="fa fa-edit"></i></a>
                                    <a href="{{ path('admin_day_event_delete', {id : dayEvent.id} ) }}" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                                </td>
                            </tr>
                        {% endfor %}
                    {% else %}
                    <tr>
                        <td colspan="6">Aucune donnée dans la base .</td>
                    </tr>
                    {% endif %}
                    </tbody>
                </table>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>