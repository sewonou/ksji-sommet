{% extends 'base.html.twig' %}
{% block title %}Inscription{% endblock %}
{% block body %}
    <section id="intro" style="height: 65vh !important; ">
        <div class="intro-container wow fadeIn">
            <h1 class="mb-2 pb-0"><span>8<sup>ème</sup> Sommet Ouest Africain</span></h1>
            <img src="{{ asset('img/logo.jpeg') }}" alt="" class="avatar avatar-medium mb-2">
            <h3 class="mb-4 pb-0" style="background-color: #ed4b91; font-weight: bold;">Thème : La confiance : Une dymanique de la vie au quotidienne</h3>
            <p>Date limite des inscriptions : Le 31 Décembre 2020. Après cette date une majoration sera appliquée jusqu'au 28 Février 2020</p>

        </div>
    </section>
    <section id="subscribe" class="section-bg ">
    <div class="container-fluid wow fadeInUp">
        {{ form_start(form) }}
        <div class="row">
            <div class="col-md-4">
                <div class="bg-dark py-3 px-3 text-light">
                    <fieldset>
                        <legend>Informations personnel</legend>
                        {{ form_row(form.firstName) }}
                        {{ form_row(form.lastName) }}
                        {{ form_row(form.gender) }}
                        {{ form_row(form.imageFile) }}
                        {{ form_row(form.address) }}
                        {{ form_row(form.phone) }}
                    </fieldset>
                </div>
            </div>
            <div class="col-md-4 mt-2">
                <div class="bg-dark py-3 px-3 text-light">
                    <fieldset>
                        <legend>Information sur l'ordre</legend>
                        {{ form_row(form.country) }}
                        {{ form_row(form.board) }}
                        {{ form_row(form.local) }}
                        {{ form_row(form.category) }}
                    </fieldset>
                </div>
            </div>

            <div class="col-md-4 mt-2">
                <div class="bg-dark py-3 px-3 text-light">
                    <fieldset>
                        <legend>Information de connexion</legend>
                        {{ form_row(form.email) }}
                        {{ form_row(form.hash) }}
                        {{ form_row(form.arrivalWay) }}
                        {{ form_row(form.arrivalTime) }}
                        {{ form_row(form.hotel) }}
                        {{ form_row(form.departureTime) }}
                    </fieldset>
                    <button type="submit" class="btn btn-success">Valider votre inscription</button>
                </div>
            </div>
        </div>
        {{ form_end(form) }}
    </section>
{% endblock %}



